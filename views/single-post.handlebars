<article class="post my-3 mx-4">
    <div class="title-bar">
        <h4>{{post.title}}</h4>
        <h6 class="side-title">Posted by {{post.user.username}} on {{post.created_at}}</h6>
    </div>
    <div class="contents" >
        <p>{{post.contents}}</p>
    </div>
</article>

{{#if loggedIn}}
<form class="comment-form row my-3 mx-4">
    <div class="col-12">
        <label for="comment-body" class="form-label">Comment: </label>
        <textarea class="form-control" name="comment-body"></textarea>
    </div>
    <div class="col-12">
        <button type="submit">Add A Comment!</button>
    </div>
</form>

<script src="/javascript/comment.js"></script>
{{/if}}

<div class="comments">
    {{#each post.comments }}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>
