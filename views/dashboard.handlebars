<section>
    <h2>Your Dashboard</h2>
    <article class="post my-3 mx-4">
     {{#each posts as |post|}}
        <div class="title-bar">
            <h4>{{post.title}}</h4>
            <h6 class="side-title">Posted by {{post.user.username}} on {{format_date post.created_at}}</h6>
        </div>
        <div class="contents" >
            <p>{{post.contents}}</p>
        </div>
    {{/each}}
    </article>
</section>

<section>
    <a href="/new-post">
      <button>Add New Post</button>
    </a>
</section>