    <section class="comment mx-4 my-4">
        <div class="meta-comments">
            Comment posted by {{user.username}} on {{format_date created_at}}
        </div>
        <div class="comment-text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>
