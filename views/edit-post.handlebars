<article>
    <h2>
        Edit Post
    </h2>

    <form class="edit-post-form">
        <div>
            <label for="post-title" class="post-label">Title: </label>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-content" class="post-label">Content: </label>
            <input name="post-content" type="text" value="{{post.contents}}" />
        </div>
        <button type="submit">Update Post</button>
        <button type="button" class="delete-post-btn">Delete</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>